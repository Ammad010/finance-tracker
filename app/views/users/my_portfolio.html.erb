<h1>My_portfolio</h1>

<div class = 'search-area'> 
    <h3>Search Stocks</h1>
    <%= form_tag search_stock_path ,remote: true, method: :get do%>
        <div class= "form-group row">
            <div class ="col-sm-9 no-right-padding">
                <%= text_field_tag :stock, params[:stock],placeholder: "Stock ticker Symbol" , autofocus: true, class: "form-control form-column-lg" %>
    
            </div>
            <div class ="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                  <%= fa_icon 'search'%>
                <% end%>
            </div>
        </div>
    <%end%>


</div>
<div id="result">
    <%= render 'users/result'%>
</div>


